<h2 class="h2-pages">Perfil do corretor</h2>

<div class="span12"></div>
<div class="row-fluid">
	<div class="span8 offset2 table-visualizacao">
		<table class="table" >
			 <caption><%= @user.name %></caption>
			<tr>
				<th>RG:</th>
				<td><%= @user.rg %></td>
				<th>CPF:</th>
				<td><%= @user.cpf %></td>
			</tr>
			<tr>
				<th>Telefone:</th>
				<td><%= @user.tel %></td>
				<th>Celular:</th>
				<td><%= @user.cel %></td>
			</tr>

			<tr>
				<th>Endere√ßo:</th>
				<td><%= @user.ende %></td>
				<th></th>
				<td></td>
			</tr>

			<tr>
				<th>Username:</th>
				<td><%= @user.username %></td>
				<th><%= t("activerecord.attributes.user.email", :default => t("activerecord.labels.email", :default => "Email")) %>:</th>
				<td><%= @user.email %></td>
			</tr>
		</table>
	</div>
</div>

<div class="form-actions-white">
	<%= link_to "Voltar", corretor_users_path, :class => 'btn'  %>
	<%= link_to "Alterar", edit_corretor_user_path(@user), :class => 'btn btn-primary' %>
	<%= link_to "Remover", corretor_user_path(@user), :method => "delete", :confirm => "#{t("web-app-theme.confirm", :default => "Tem certeza que deseja remover esse corretor ?")}", :class => 'btn btn-danger' %>
</div>
