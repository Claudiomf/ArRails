<h1>Cadastrar Corretor</h1>
<fieldset>
  <% if @user.errors.any? %>
    <div class="alert alert-error">
      <button type="button" class="close" data-dismiss="alert">×</button>
    <h4>
      Operação não realizada: <strong><%= pluralize(@user.errors.count, "erro") %></strong> encontrados.
    </h4>
    <br/>O usuário não pode ser cadastrado.
    <br/>
    <br>
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
              </ul>
  </div>
  
  <% end %>
	<%= form_for [:corretor, @user], :url => corretor_users_path, :html => { :class => :form } do |f| -%>
	  <%= render :partial => "form", :locals => {:f => f} %>
	<% end -%>
</fieldset>
